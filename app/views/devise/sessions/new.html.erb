<div class="login-blk">
  <%# params[:login_type] ||= 'job_seeker' %>
  <h2><%#= params[:login_type].camelize.singularize %> Sign in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  	<%#= hidden_field_tag "login_type",params[:login_type] %>
    <div class="row"><%= f.label :login ,"Username OR Email"%><br />
    <%= f.text_field :login, autofocus: true ,class: "txt-box"%></div>

    <div class="row"><%= f.label :password  %><br />
      <%= f.password_field :password, autocomplete: "off",class: "txt-box" %></div>

    <% if devise_mapping.rememberable? -%>
      <div class="row"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div class="row"><%= f.submit "Sign in" ,class: 'sign-btn' %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    	<%= link_to "Forgot your password?", new_password_path(resource_name) ,class: "floatright"%>
    <% end -%>   
    </div>
  <% end %>
</div>
