
<% content_for(:admin_menu) do %>
  <div class="header">            
    <h1 class="page-title">JobSeekers</h1>
  </div>
  <ul class="breadcrumb">
    <li>
      <%= link_to "Home" , admin_path %>
      <span class="divider">/</span>
    </li>
    <li class="active">JobSeekers</li>
  </ul>  
<% end %>
<div class="btn-toolbar">
    <%= link_to '<i class="icon-plus"></i> New JobSeeker'.html_safe, new_admin_job_seeker_path , class: "btn btn-primary" %>    
    <button class="btn">Import</button>
    <button class="btn">Export</button>
  <div class="btn-group">    
  </div>
</div>
<div class="well">
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Email</th>
        <th>Phone</th>                
        <th>City</th>
        <th>State</th>
        <th>Country</th>                      
        <th>Availble To Start</th>
        <th style="width: 26px;"></th>
      </tr>
    </thead>
    <tbody>
    <% @job_seekers.each_with_index do |job_seeker,index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= job_seeker.user.first_name %></td>
        <td><%= job_seeker.user.last_name %></td>
        <td><%= job_seeker.user.username %></td>
        <td><%= job_seeker.user.email %></td>
        <td><%= job_seeker.user.phone %></td>        
        <td><%= job_seeker.city %></td>
        <td><%= job_seeker.state.name if job_seeker.state_id %></td>
        <td><%= job_seeker.country.name if job_seeker.country_id %></td>                
        <td><%= job_seeker.availble_to_start %></td>        
        <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_admin_job_seeker_path(job_seeker) %></td>
        <td><%= link_to '<i class="icon-remove"></i>'.html_safe, admin_job_seeker_path(job_seeker), method: :delete , data: { confirm: 'Are you sure?' } %></td>        
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
<div class="digg_pagination">
  <%= will_paginate @job_seekers %>
</div>