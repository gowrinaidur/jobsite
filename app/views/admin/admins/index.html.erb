<% content_for(:admin_menu) do %>
  <div class="header">            
    <h1 class="page-title">Admin Users</h1>
  </div>
  <ul class="breadcrumb">
    <li>
      <%= link_to "Home" , admin_path %>
      <span class="divider">/</span>
    </li>
    <li class="active">Admin Users</li>
  </ul>  
<% end %>
<div class="btn-toolbar">
    <%= link_to '<i class="icon-plus"></i> New Admin User'.html_safe, new_admin_admin_path , class: "btn btn-primary" %>    
    <button class="btn">Import</button>
    <button class="btn">Export</button>
  <div class="btn-group">    
  </div>
</div>
<div class="well">
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Username</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Status</th>
          <th style="width: 26px;"></th>
        </tr>
      </thead>
      <tbody>
        <% @admins.each_with_index do |admin,index| %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= admin.user.first_name %></td>
            <td><%= admin.user.last_name %></td>
            <td><%= admin.user.username %></td>
            <td><%= admin.user.email %></td>
            <td><%= admin.user.phone %></td>
            <td><%= Admin::STATUSES[admin.status] %></td>            
            <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_admin_admin_path(admin) %></td>
            <td><%= link_to '<i class="icon-remove"></i>'.html_safe, admin_admin_path(admin), method: :delete , data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>                
      </tbody>
    </table>
</div>
<div class="digg_pagination">
  <%= will_paginate @admins, :container => false %>
</div>
